
{{> header}}
 <!-- Edit  -->
        <section id="viewEditdestination">
            <h2>Edit existing destination</h2>
            <form action="/edit/{{des.id}}" method="POST" id="formAdddestination">
                <label for="destination">Destination name:</label>
                <input type="text" id="destination" name="destination" value="{{des.destination}}">
                <label for="city">City:</label>
                <input type="text" id="city" name="city" value="{{des.city}}">
                <label for="duration">Duration:</label>
                <input type="number" id="duration" name="duration" value="{{des.duration}}">
                <label for="departureDate">Departure Date:</label>
                <input type="date" id="departureDate" name="departureDate" value="{{des.departureDate}}">
                <label for="imgUrl">Image:</label>
                <input type="text" id="imgUrl" name="imgUrl"
                    value="{{des.imgUrl}}">

                <input type="submit" class="create" value="Edit">
            </form>
        </section>
{{> footer}}
