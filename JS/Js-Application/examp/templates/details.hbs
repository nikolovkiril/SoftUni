
{{> header}}
<!-- Details  -->
<section id="viewdestinationDetails">
    <div class="destination-area">
        <div class="destination-area-left">
            <img src="{{des.imgUrl}}" alt="">
        </div>
        <div class="destination-area-right">
            <h3>{{des.destination}}</h3>
            <div>to {{des.city}}</div>
            <div class="data-and-time">
                {{des.departureDate}}
                <a href="/edit/{{ des.id }}" class="edit-destination-detail"></a>
            </div>
            <div>
                {{des.duration}} days
            </div>
        </div>
    </div>
</section>
{{> footer}}